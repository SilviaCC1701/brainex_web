@model IEnumerable<BrainEx.Models.User>
@{
    ViewData["Title"] = "Home";
}

<div class="vista-home">
    <div class="page-title"><img src="~/images/BrainEx2.png" /></div>

    <section class="card-container">
        <div class="card calcBrainAge">
            <div class="card-img"><img src="~/images/cerebroSeleccion.png" /></div>
            <a class="btn-secondary" href="./CalcBrainAge">Calcula tu edad cerebral</a>
        </div>
        <div class="card juegos">
            <div class="card-img"><img src="~/images/figuritas.png" /></div>
            <a class="btn-secondary" href="./Juegos">Catálogo de juegos</a>
        </div>
        <div class="card explicacion">
            <div class="card-img"><img src="~/images/Documento.png" /></div>
            <a class="btn-secondary">Explicación del proyecto</a>
        </div>
    </section>
    <div class="grupo-enlaces">
        <a class="btn-secondary" href="https://github.com/SilviaCC1701/brainex_web">Repositorio web</a>
        <a class="btn-secondary" href="https://github.com/SilviaCC1701/brainex_proxy">Repositorio proxy</a>
    </div>
</div>



