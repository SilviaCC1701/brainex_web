<div id="color-memory-game" class="game-wrapper">
    <div id="start-screen" class="start-screen">
        <h2>Presiona cualquier tecla para comenzar</h2>
    </div>

    <div id="countdown" class="countdown">3</div>

    <div class="container hidden" id="game-container">
        <div id="color-grid" class="color-grid">
            <div class="color-tile" data-color="green" style="background-color: #2ecc71;"></div>
            <div class="color-tile" data-color="red" style="background-color: #e74c3c;"></div>
            <div class="color-tile" data-color="yellow" style="background-color: #f1c40f;"></div>
            <div class="color-tile" data-color="blue" style="background-color: #3498db;"></div>
        </div>

        <div id="result-screen" class="hidden">
            <h2>¡Finalizado!</h2>
            <p>Secuencia máxima alcanzada: <span id="color-score"></span></p>
        </div>
    </div>

    <audio id="sound-start" src="/sounds/start.mp3" preload="auto"></audio>
    <audio id="sound-correct" src="/sounds/correct.mp3" preload="auto"></audio>
    <audio id="sound-error" src="/sounds/error.mp3" preload="auto"></audio>
    <audio id="sound-end" src="/sounds/end.mp3" preload="auto"></audio>
</div>