@{
    var contexto = ViewData["Contexto"]?.ToString() ?? "Juegos";
    var gameId = contexto == "Juegos" ? "color-memory-game" : "color-memory-game-cec";
    var esJuegos = contexto == "Juegos";
    ViewData["Title"] = "Memory Game";
    var dominio = $"{Context.Request.Scheme}://{Context.Request.Host}";
}
<div id="@gameId" class="game-wrapper">
    <div class="vista-cec">
        <h2 id="titleCEC">Memory <span class="addCoralColor">Game</span></h2>
        <div class="grupo-enlaces">
            <a class="btn-secondary btn-play-game">Empezar a jugar</a>
            <p class="descripcion">Memoriza la secuencia y el orden de los colores que se mostrarán brevemente y luego repítelos en el mismo orden. Un reto para tu memoria a corto plazo.</p>
        </div>

        <div class="figurasCSS">
            <span class="figurita cuadradoVerde relleno"></span>
            <span class="figurita circuloAzul"></span>
            <span class="figurita trianguloLavanda relleno"></span>
            <span class="figurita cuadradoVerde"></span>
            <span class="figurita circuloAzul relleno"></span>
            <span class="figurita triangleLavanda"></span>
        </div>
    </div>

    <div id="countdown" class="countdown hidden">3</div>

    <div class="container hidden" id="game-container">
        <div id="color-grid" class="color-grid">
            <div class="color-tile" data-color="blue" style="background-color: #6EB5FF;"></div>
            <div class="color-tile" data-color="purple" style="background-color: #CFA1FF;"></div>
            <div class="color-tile" data-color="green" style="background-color: #42FF99;"></div>
            <div class="color-tile" data-color="red" style="background-color: #FF9E8D;"></div>
        </div>

        <div id="result-screen" class="hidden vista-cec">
            @if (esJuegos)
            {
                <div class="grupo-enlaces">
                    <a id="ver-resultados-btn" class="btn-secondary btn-play-game" href="@dominio/Juegos/MemoryGame/Resultados">Ver Resultados</a>
                </div>
            }
            else
            {
                <div class="grupo-enlaces">
                    <a id="ver-resultados-btn" class="btn-secondary btn-play-game" href="@dominio/CalcBrainAge/CompletaOperacion">Siguiente Juego</a>
                </div>
            }
        </div>
    </div>

    <audio id="sound-start" src="/sounds/start.mp3" preload="auto"></audio>
    <audio id="sound-correct" src="/sounds/correct.mp3" preload="auto"></audio>
    <audio id="sound-end" src="/sounds/end.mp3" preload="auto"></audio>
</div>