@{
    var contexto = ViewData["Contexto"]?.ToString() ?? "Juegos";
    var esJuegos = contexto == "Juegos";
    var gameId = esJuegos ? "hanoi-game" : "hanoi-game-cec";
}
<div id="@gameId" class="game-wrapper">
    <div id="start-screen" class="start-screen">
        <h2>Presiona cualquier tecla para comenzar</h2>
    </div>

    <div id="countdown" class="countdown">3</div>

    <div class="container hidden" id="game-container">
        <div class="hanoi-pegs">
            <div class="peg" data-peg="0"></div>
            <div class="peg" data-peg="1"></div>
            <div class="peg" data-peg="2"></div>
        </div>

        <div id="result-screen" class="hidden">
            <h2>¡Completado!</h2>
            @if (esJuegos)
            {
                <div style="text-align: center; margin-top: 30px;">
                    <a id="ver-resultados-btn" class="btn btn-primary btn-lg" href="#">Ver resultados</a>
                </div>
            }
            else
            {
                <div style="text-align: center; margin-top: 30px;">
                    <a href="/CalcBrainAge/Resultados" class="btn btn-primary btn-lg">Ver resultados</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .next-button {
        font-size: 2rem;
        padding: 1rem 2rem;
        margin-top: 3rem;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 12px;
        cursor: pointer;
    }

        .next-button:hover {
            background-color: #388e3c;
        }
</style>