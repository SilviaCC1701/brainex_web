@{
    var contexto = ViewData["Contexto"]?.ToString() ?? "Juegos";
    var gameId = contexto == "Juegos" ? "complete-operation-game" : "complete-operation-game-cec";
    var esJuegos = contexto == "Juegos";
}
<div id="@gameId" class="game-wrapper">
    <div id="start-screen" class="start-screen">
        <h2>Presiona cualquier tecla para comenzar</h2>
    </div>

    <div id="countdown" class="countdown">3</div>

    <div class="container hidden" id="game-container">
        <div id="prev-operation" class="operation small"></div>

        <div id="current-line" class="current-line">
            <div id="current-operation" class="operation large"></div>
        </div>

        <div id="next-operation" class="operation small"></div>

        <div id="result-screen" class="hidden">
            <h2>¡Finalizado!</h2>
            @if (esJuegos)
            {
                <div id="result-stats" class="stats-container"></div>
            }
            else
            {
                <button id="next-game-btn" class="next-button" onclick="location.href='/CalcBrainAge/TorreHanoi'">Siguiente juego</button>
            }
        </div>
    </div>
</div>

<audio id="sound-start" src="/sounds/start.mp3" preload="auto"></audio>
<audio id="sound-correct" src="/sounds/correct.mp3" preload="auto"></audio>
<audio id="sound-end" src="/sounds/end.mp3" preload="auto"></audio>


@if (!esJuegos)
{
    <style>
        .next-button {
            font-size: 2rem;
            padding: 1rem 2rem;
            margin-top: 3rem;
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 12px;
            cursor: pointer;
        }

        .next-button:hover {
            background-color: #388e3c;
        }
    </style>
}