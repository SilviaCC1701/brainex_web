@model BrainEx.Models.Resultados.ResultadoMemoryGame
@{
}

<div class="bloque bloque-tiempo">
	<ul>
		<li>Tiempo total: @Model.TiempoTotal</li>
		<li>Media por fase: @Model.TiempoMedio segundos</li>
		<li>Fases Totales: @Model.TotalFases</li>
		<li>NºSecuencias perfectas: @Model.SecuenciasPerfectas</li>
	</ul>
</div>
<div class="bloque bloque-precision">
	<ul>
		<li>Precisión: @Model.Precision</li>
		<li>Fallos totales: @Model.FallosTotales</li>
	</ul>
</div>
<div class="bloque bloque-detalle">
	<h3>Detalle por operación</h3>
	<table>
		<thead>
		<th>Fase</th>
		<th>Nº Fallos</th>
		<th>Tiempo</th>
		</thead>
		<tbody>
			@foreach (var infoOp in Model.Detalles)
			{
				<tr>
					<td>@infoOp.Fase</td>
					<td>@infoOp.Fallos</td>
					<td>@infoOp.Tiempo sg</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="bloque bloque-graficos">
	<div class="grafico-tiempo">
		<h3>Gráfico: Tiempo por operación</h3>
		<div style="width: 100%; max-width: 800px; margin: 40px auto;">
			<canvas id="timeChart"></canvas>
		</div>
	</div>
	<div class="grafico-aciertos">
		<h3>Distribución de aciertos</h3>
		<div style="width: 100%; max-width: 500px; margin: 40px auto;">
			<canvas id="accuracyChart"></canvas>
		</div>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
	const operations = [
	@foreach (var op in Model.Detalles)
	{
		@: "@op.Fase",
	}
	];

	const timesPerOp = [
	@foreach (var op in Model.Detalles)
	{
		@: @op.Tiempo,
	}
	];

	const ctxLine = document.getElementById('timeChart').getContext('2d');
	new Chart(ctxLine, {
		type: 'line',
		data: {
			labels: operations,
			datasets: [{
				label: 'Tiempo por fase (s)',
				data: timesPerOp,
				borderColor: 'rgba(75, 192, 192, 1)',
				backgroundColor: 'rgba(75, 192, 192, 0.2)',
				fill: true,
				tension: 0.3,
				pointRadius: 4
			}]
		},
		options: {
			responsive: true,
			maintainAspectRatio: false,
			scales: {
				y: {
					beginAtZero: true,
					title: {
						display: true,
						text: 'Tiempo (s)'
					}
				},
				x: {
					title: {
						display: true,
						text: 'Fases'
					}
				}
			}
		}
	});

	const ctxPie = document.getElementById('accuracyChart').getContext('2d');
	new Chart(ctxPie, {
		type: 'pie',
		data: {
			labels: ['Aciertos 1er intento', 'Con fallos'],
			datasets: [{
				data: [@Model.SecuenciasPerfectas, @(Model.FallosTotales)],
				backgroundColor: [
					'rgba(54, 162, 235, 0.6)',
					'rgba(255, 99, 132, 0.6)'
				],
				borderColor: [
					'rgba(54, 162, 235, 1)',
					'rgba(255, 99, 132, 1)'
				],
				borderWidth: 1
			}]
		},
		options: {
			responsive: true,
			maintainAspectRatio: false
		}
	});

</script>
<style>
	#timeChart, #accuracyChart {
		width: 100%;
		height: 300px;
	}
</style>
