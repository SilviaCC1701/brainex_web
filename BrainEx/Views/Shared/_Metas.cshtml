@{
    string proxyUrl = Environment.GetEnvironmentVariable("ApiBaseUrl");
    var iconos = new[] { "Circulo.png", "Triangulo.png", "Cuadrado.png", "figuritas.png" };
    var random = new Random();
    var iconoSeleccionado = iconos[random.Next(iconos.Length)];
}
<link rel="icon" type="image/png" href="/images/@iconoSeleccionado">

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="api-base-url" content="@proxyUrl" />

<meta name="description" content="@ViewData["Description"]" />
<meta name="robots" content="index, follow" />
<meta property="og:title" content="@ViewData["Title"] - BrainEx" />
<meta property="og:description" content="@ViewData["Description"]" />
<meta property="og:type" content="website" />
<meta property="og:image" content="/images/figuritas.png" />